﻿@model TLP.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Authenticate", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td>username: </td>
                    <td>@Html.TextBoxFor(m => m.username)</td>
                    <td><div style="color:red">@Html.ValidationMessageFor(x => x.username)</div></td>
                </tr>
                <tr>
                    <td>password:</td>
                    <td>@Html.PasswordFor(m => m.password)</td>
                    <td><div style="color:red">@Html.ValidationMessageFor(x => x.password)</div></td>
                </tr>
                <tr>
                    <td><input name="Submit" id="Submit1" type="submit" value="Login" /></td>
                </tr>
            </table>

        }
        <p></p>
        <p></p>
        <input type="button" title="Registrate" value="Registrate" onclick="location.href='@Url.Action("Registrate", "Login", null)'" />
    </div>

</body>
</html>
